@model VisitorViewModel

@if(TempData["result"]!=null)
{
    <div class="alert alert-info">@TempData["result"]</div>
}
<div class="row">
@foreach (var item in ViewBag.visitorViewModels as List<VisitorViewModel>)
{
    
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Created.ToShortDateString()</h6>
                    <p class="card-text">@item.Comment</p>
                </div>
            </div>
        </div>
    

}
</div>
<form asp-controller="Home" asp-action="SaveVisitorComment" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input  class="form-control" asp-for="Name">
    </div>
     <div class="form-floating mb-5">
        <textarea asp-for="Comment" class="form-control" placeholder="Comment"style="height: 100px"></textarea>
        <label asp-for="Comment">Comment</label>
        <span class="text-danger" asp-validation-for="Comment"></span>
     </div>
    

    <button type="submit" class="btn btn-primary">Submit</button>
</form>