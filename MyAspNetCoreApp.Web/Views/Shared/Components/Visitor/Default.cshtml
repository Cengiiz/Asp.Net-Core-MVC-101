@model VisitorViewModel

@if(TempData["result"]!=null)
{
    <div class="alert alert-info">@TempData["result"]</div>
}

<form asp-controller="Home" asp-action="SaveVisitorComment" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input  class="form-control" asp-for="Name">
    </div>
     <div class="form-floating mb-5">
        <textarea asp-for="Comment" class="form-control" placeholder="Comment"style="height: 100px"></textarea>
        <label asp-for="Comment">Comment</label>
        <span class="text-danger" asp-validation-for="Comment"></span>
     </div>
    

    <button type="submit" class="btn btn-primary">Submit</button>
</form>