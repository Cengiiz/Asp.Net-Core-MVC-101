
@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}
@model List<Product>

<h1>Products</h1>

@if(TempData["status"]!=null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["status"]
    </div>
}
<a asp-controller="products" asp-action="add">New Produt</a>
<table class="table">
    <thead>
        <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stoc</th>
        <th>Color</th>
        <th>Exprie</th>
        <th>Statu</th>
        <th>Remove</th>
        <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
             <td>@item.Id</td>
                <td><a asp-controller="products" asp-action="update" asp-route-id="@item.Id">@item.Name</a></td>
             <td>@item.Price</td>
             <td>@item.Stock</td>
             <td>@item.Color</td>
                <td>@item.Expire  Month</td>
                <td>@item.IsPublish</td>
             <!--<td>item.Width</td>
                <td>item.Height</td> -->
             <td><a asp-controller="products" asp-action="remove" asp-route-id="@item.Id">Delete</a></td>
             <td><a asp-controller="products" asp-action="update" asp-route-id="@item.Id">Update</a></td>
              
            </tr>
        }
    </tbody>

</table>